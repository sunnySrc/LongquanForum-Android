<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_myfriends_search_total"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:orientation="vertical">
    <View android:background="#ffd9d9d9" android:layout_width="fill_parent" android:layout_height="@dimen/com_facebook_likeboxcountview_border_radius" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_myfriends_header"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="3dp">
            <TextView
                android:id="@+id/item_myfriends_nickname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="昵称"/>
            <TextView
                android:id="@+id/item_myfriends_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="#3c78d8"
                android:layout_weight="1"
                android:text="等级"/>
            <TextView
                android:id="@+id/item_myfriends_other"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="这个人很懒,不用理他~"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_myfriends_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="日期"
            android:paddingTop="6dp"/>
    </LinearLayout>

</LinearLayout>
